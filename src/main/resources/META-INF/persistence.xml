<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">


      <class>com.fr.amire.entities.AccountEntity</class>
      <class>com.fr.amire.entities.AnnonceEntity</class>
      <class>com.fr.amire.entities.CandidatureEntity</class>
      <class>com.fr.amire.entities.EcoleEntity</class>
      <class>com.fr.amire.entities.EnseignantEntity</class>
      <properties>
          <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/amire"/>
          <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
          <property name="eclipselink.jdbc.user" value="root"/>
          <property name="eclipselink.jdbc.password" value="root"/>
      </properties>
  </persistence-unit>
</persistence>
